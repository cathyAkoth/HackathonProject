style.
 body{
    background-image: url("/images/logo.png");  
    background-repeat: no-repeat;
    background-size: cover;
    
    }
    
    #signInLabel{
    text-align: center;
    color: orange;
    font-family:poppins;
    font-size : 25px
    
    }
    div.transbox{
    border-radius: 4px;
    background-color: rgb(7, 7, 7) ;
    padding: 20px;
    max-width: 250px;
    margin: 60px auto;
    opacity: 0.7;
   
    
    }
    
    input[type=text], select {
    width: 100%;
    padding: 10px 20px;
    margin: 6px 0;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 2px;
    box-sizing: border-box;
    color: black ;
    }
    input[type=password], select {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 4%;
    box-sizing: border-box;
    }
    input[type=submit] {
    width: 50%;
    color: black;
    padding: 14px 20px;
    margin: 50px;
    border: none;
    font-family:poppins;
    border-radius: 50px;
    cursor: pointer;
    background-color: orange; 
    }
    input[type=submit]:hover {
    background-color:orangered;
    }
    

 
    #logoArea{
      width:7%;
      margin: 2px;
    }
    #titleArea{
      
      color:orange;
      
      /* text-align:left; */
      font-size:25px;
      font-family:poppins;
      font-weight:bold;
      
    }
    .header{
      background-color:rgb(44, 43, 43);
      box-shadow:5px 5px 5px rgba(68, 52, 52, 0.6);
      color:pink;
      font-family:poppins;
      height: 100px; 
       
    }
.header
  img#logoArea(src='./Images/logo.png')
  span#titleArea LEARNING MANAGENMENT SYSTEM.
  .background(style="background-image: url('bg.jpg');")
    .card-body
      form(method='POST' action='/signUp' name='signUpForm')
        .transbox
          #signInLabel Sign in
          div
            input#username(type='text' name='username' placeholder='Username')
            p.username_info.warnP  
          div
            input#password1(type='password' name='password' autocomplete='off' placeholder='Password')
            p.password1_info.warnP
          #submitDiv
            input#submit.button(type='submit' value='Sign in')
    script(src='/javascript/signUpVal.js')
